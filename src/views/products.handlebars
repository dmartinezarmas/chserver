<h1 class="text-center bg-danger text-light p-3">PRODUCTS</h1>
<div class="d-flex flex-wrap m-2 text-center justify-content-center">
  {{#each products}}
    <a
      class="m-5 w-25 bg-dark rounded-4 bg-success p-2 text-decoration-none"
      style="--bs-bg-opacity: .2"
      href="/products/{{this.id}}"
    >
      <h2 class="text-dark">{{this.title}}</h2>
      <img class="w-100 p-2" src="{{this.photo}}" alt="{{this.title}}" />
    </a>

  {{/each}}
</div>
<div class="d-flex flex-row text-center justify-content-center">
  {{#if prevPageLink}}
    <a href="{{prevPageLink}}" class="btn btn-primary m-2">Previous Page</a>
  {{/if}}
  {{#if nextPageLink}}
    <a href="{{nextPageLink}}" class="btn btn-primary m-2">Next Page</a>
  {{/if}}

</div>